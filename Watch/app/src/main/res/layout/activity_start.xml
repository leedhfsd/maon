<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@color/real_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.run.StartActivity">

        <Button
            android:id="@+id/runStartBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/start_button_background"
            android:fontFamily="@font/gmarketsansttfbold"
            android:text="달리기\n시작하기"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
